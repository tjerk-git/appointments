<div class="day-container">
  <% if @spot %>
  <div class="card-container">
      <div class="card">
        <div class="card-header">
          <p class="card-header-title">
          Spot for <%= @spot.calendar.name %> at:  
        <%= local_time(@spot.start_date, '%d-%m-%y at %H:%M') %> - 
        <%= local_time(@spot.end_date, '%H:%M') %>
          </p>
        </div>
        <footer class="card-footer">
            <%= link_to "Cancel this appointment", spot_cancel_path(@spot.slug) %>
            <br>
            <%= link_to "Add to calendar", spot_ical_path(@spot.slug) %>
        </footer>
      </div>
    <br>
  </div>
  <% else %>
        <div class="card-container">
      <div class="card">
        <div class="card-header">
          <p class="card-header-title">
            Sorry, no spot found
          </p>
        </div>
      </div>
    <br>
  </div>
  <% end %>
</div>

