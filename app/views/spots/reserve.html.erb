<%= form_with url: "/spot/reserve/#{@spot.id}", data: { turbo: false }, method: :patch do |form| %>
  <% if @spot.errors.any? %>
    <div class="errors">
      <% @spot.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
  <% end %>

  <%= form.label :visitor_name, "Your name please:" %>
  <%= form.text_field :visitor_name, class: "input", autofocus: true %>
  <%= form.label :visitor_email, "Your e-mail please:" %>
  <%= form.email_field :visitor_email %>
  <%= form.submit "Reserve spot" %>
<% end %>