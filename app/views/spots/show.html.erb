<% if @spots %>

<% @spots[:days].each do |day| %>
  <h1>
    <%= local_time(day[:day], '%B %e') %>
  </h1>
  <hr>
  <% day[:spots].each do |spot| %>
    <div class="box">
     <%= local_time(spot.start_date, '%H:%M') %> -
     <%= local_time(spot.end_date, '%H:%M') %>
    <footer class="card-footer">
        <button class="button is-link is-outlined js-modal-trigger" data-target="modal-js-subscribe-<%= spot.id %>">Check in</button>
    </footer>
    </div>

    <!-- modals !-->
    <div id="modal-js-subscribe-<%=spot.id%>" class="modal">
      <div class="modal-background"></div>

      <div class="modal-content">

        <div class="box">
          <!-- turbo bitch !-->
          <div id="sign_up_results">
            <h1> You want to subscribe for: <%= local_time(spot.start_date, '%H:%M') %> -  <%= local_time(spot.end_date, '%H:%M') %></h1>


            <%= render "forms/spot_sign_up_form", spot: spot %>
          </div>
        </div>
      </div>

      <button class="modal-close is-large" aria-label="close"></button>
    </div>
  <% end %>
<% end %>

<% else %>
  <br>
  <div class="box">
    <h1>Deeply sorry, no spots available for this calendar right now... </h1>
  </div>
<% end %>


